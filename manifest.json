{
  "manifest_version": 3,
  "name": "Group manager for chrome",
  "description": "Makes it easier to work with groups in chrome",
  "version": "1.0",
  "author": "YaguraWizz",

  "action": {
    "default_popup": "html/popup.html",
    "default_icon": "img/128.png"
  },

  "icons": {
    "128": "img/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["js/content.js"]
    }
  ],

  "permissions": [
    "tabs",
    "activeTab",
    "bookmarks",
    "tabGroups",
    "scripting",
    "storage",
    "alarms",
    "notifications"
  ],
  "background": {
    "service_worker": "js/background.js"
  }
}
