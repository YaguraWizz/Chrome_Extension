{
  "manifest_version": 3,
  "name": "Group manager for chrome",
  "description": "Makes it easier to work with groups in chrome",
  "version": "1.0",

  "action": {
    "default_popup": "scripts/popup.html",
    "default_icon": "img/128.png"
  },

  "icons": {
    "128": "img/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["index.js"]
    }
  ],

  "permissions": ["tabs", "sessions", "tabGroups"]
}
